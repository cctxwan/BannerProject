<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/feedbook_bg"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_51_dip"
    android:layout_marginRight="@dimen/dimen_51_dip"
    android:layout_width="@dimen/dimen_384_dip"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_hc_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定要清除缓存？"
        android:textColor="#24262A"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:textSize="@dimen/dimen_24_dip"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5_dip"
        android:layout_marginTop="@dimen/dimen_43_dip"
        android:background="#EEEEEE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_58_dip"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/no_hc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dimen_23_dip"
            android:textColor="#24262A"/>

        <View
            android:layout_width="@dimen/dimen_0.5_dip"
            android:layout_height="match_parent"
            android:background="#EEEEEE"/>

        <TextView
            android:id="@+id/yes_hc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="确定"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/dimen_23_dip"
            android:textColor="#3A82EA"/>

    </LinearLayout>

</LinearLayout>