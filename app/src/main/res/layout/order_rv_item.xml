<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/lin_order_rv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_30_dip"
    android:layout_marginBottom="@dimen/dimen_20_dip"
    android:background="@drawable/feedbook_bg">

    <TextView
        android:id="@+id/order_item_state"
        android:layout_width="@dimen/dimen_103_dip"
        android:layout_height="@dimen/dimen_32_dip"
        android:text="进行中"
        android:background="@mipmap/jxz"
        android:gravity="center"
        android:layout_gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/dimen_20_dip"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/dimen_4_dip"
            android:layout_height="@dimen/dimen_23_dip"
            android:background="#FFB944"/>

        <TextView
            android:id="@+id/order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="三只松鼠"
            android:textSize="@dimen/dimen_23_dip"
            android:textColor="#30313C"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/tfdw"/>

        <TextView
            android:id="@+id/order_item_tfdw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="投放点位：共109个点位"
            android:textColor="#30313C"
            android:textSize="@dimen/dimen_18_dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ljll"/>

        <TextView
            android:id="@+id/order_item_ljll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="累计流量：1000000(人次)"
            android:textColor="#30313C"
            android:textSize="@dimen/dimen_18_dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ljbf"/>

        <TextView
            android:id="@+id/order_item_ljbf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="累计播放：10000(次)"
            android:textColor="#30313C"
            android:textSize="@dimen/dimen_18_dip"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_18_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/kssj"/>

        <TextView
            android:id="@+id/order_item_kssj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:text="开始时间：2020年12月12日 8:00"
            android:textColor="#30313C"
            android:textSize="@dimen/dimen_18_dip"/>

    </LinearLayout>

</LinearLayout>