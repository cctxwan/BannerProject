<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:scrollbars="none"
    android:paddingLeft="@dimen/dimen_25_dip"
    android:paddingRight="@dimen/dimen_25_dip"
    tools:context=".activity.BroadcastActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/img_broadcast_back"
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_9_dip"
                    android:layout_height="@dimen/dimen_22_dip"
                    android:src="@mipmap/back_black"
                    android:layout_marginTop="@dimen/dimen_25_dip"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="监播详情"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_23_dip" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:layout_marginTop="@dimen/dimen_31_dip"
            android:orientation="horizontal"
            android:background="@drawable/while_bg">

            <TextView
                android:id="@+id/txt_broadcase_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="社区名称"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="大兴景苑"
                android:layout_marginLeft="@dimen/dimen_86_dip"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:orientation="horizontal"
            android:background="@drawable/while_bg">

            <TextView
                android:id="@+id/txt_broadcase_wz"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="电梯位置"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1号楼西梯"
                android:layout_marginLeft="@dimen/dimen_86_dip"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:orientation="horizontal"
            android:background="@drawable/while_bg">

            <TextView
                android:id="@+id/txt_broadcase_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="上报时间"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2020-3-13 18:31:30"
                android:layout_marginLeft="@dimen/dimen_86_dip"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:orientation="horizontal"
            android:background="@drawable/while_bg">

            <TextView
                android:id="@+id/txt_broadcase_takephoto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="投影仪拍照图片"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dimen_27_dip"
            android:layout_height="@dimen/dimen_219_dip"
            android:src="@color/slategrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:orientation="horizontal"
            android:background="@drawable/while_bg">

            <TextView
                android:id="@+id/txt_broadcase_photosb"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="摄像头拍照图片识别结果"
                android:gravity="center"
                android:textColor="#464646"
                android:textSize="@dimen/dimen_20_dip"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：2男2女"
            android:layout_marginTop="@dimen/dimen_24_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#464646"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄段：0-12岁(1人)"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#464646"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            12-25岁(2人)"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#464646"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            25-55岁(1人)"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#464646"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            55岁以上(1人)"
            android:layout_marginTop="@dimen/dimen_17_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#464646"/>

    </LinearLayout>

</ScrollView>