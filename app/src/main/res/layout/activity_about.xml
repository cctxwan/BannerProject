<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_25_dip"
    android:paddingRight="@dimen/dimen_25_dip"
    android:gravity="center_horizontal"
    tools:context=".activity.AboutActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_27_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_about_back"
            android:layout_width="@dimen/dimen_9_dip"
            android:layout_height="@dimen/dimen_22_dip"
            android:src="@mipmap/back_black"
            android:layout_marginTop="@dimen/dimen_25_dip"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dimen_23_dip" />

    </RelativeLayout>
    
    <ImageView
        android:layout_width="@dimen/dimen_128_dip"
        android:layout_height="@dimen/dimen_128_dip"
        android:layout_marginTop="@dimen/dimen_60_dip"
        android:src="@mipmap/about_bg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15_dip"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dimen_20_dip"
        android:text="当前版本：1.0.0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/dimen_29_dip"
        android:textSize="@dimen/dimen_17_dip"
        android:text="         陕西帮你电子科技有限公司成立于2017年，依托有二十余年电梯行业经验的陕西三金配件有限公司建设和发展，致力于人工智能与深度学习在电梯行业的应用与研究。切实地将人工智能理念与实际应用背景相结合，开发出有价值的智能电梯产品。现有的开发团队实力强劲，有专业的深度学习算法工程师、系统架构师、软、硬件开发工程师、产品设计师和技术管理工程师。开发团队中博士学历占比4%、硕士学历占比36%。公司正倾力打造满足现实需求的电梯物联网平台，为客户提供可信的第三方人工智能产品。我们有实力相信，陕西帮你电子科技有限公司未来将会是电梯物联网生态链产业的核心驱动力。"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1D65FF"
        android:textSize="@dimen/dimen_15_dip"
        android:layout_marginTop="@dimen/dimen_75_dip"
        android:text="隐私条款"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dimen_15_dip"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dimen_13_dip"
        android:text="公司官网：www.96333.tech"/>

</LinearLayout>