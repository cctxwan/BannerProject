<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F7"
    android:paddingLeft="@dimen/dimen_25_dip"
    android:paddingRight="@dimen/dimen_25_dip"
    tools:context=".activity.SettingActivity">

    <RelativeLayout

        android:layout_marginTop="@dimen/dimen_27_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/img_setting_back"
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_45_dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_9_dip"
                android:layout_height="@dimen/dimen_22_dip"
                android:src="@mipmap/back_black"
                android:layout_marginTop="@dimen/dimen_25_dip"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dimen_23_dip" />

    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_31_dip"
        android:background="@drawable/feedbook_bg"
        android:padding="@dimen/dimen_20_dip"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rel_change_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="头像"
                android:textColor="#464646"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_20_dip"/>

            <com.bangni.yzcm.view.RoundImageView
                android:id="@+id/img_userimg"
                android:layout_width="@dimen/dimen_73_dip"
                android:layout_height="@dimen/dimen_73_dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_30_dip"
                android:src="@mipmap/img_user"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_change_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#464646"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:id="@+id/txt_set_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请设置昵称"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="#1C1C1C"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30_dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_change_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换账号"
                android:textColor="#464646"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:id="@+id/txt_change_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18289874565"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="#1C1C1C"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_30_dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_change_pass"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_60_dip"
            android:layout_marginTop="@dimen/dimen_5_dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改密码"
                android:textColor="#464646"
                android:layout_centerVertical="true"
                android:textSize="@dimen/dimen_20_dip"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/right_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_clear_hc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/feedbook_bg"
        android:layout_marginTop="@dimen/dimen_13_dip"
        android:padding="@dimen/dimen_20_dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除缓存"
            android:textColor="#464646"
            android:layout_centerVertical="true"
            android:textSize="@dimen/dimen_20_dip"/>

        <TextView
            android:id="@+id/txt_getHc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.6M"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#1C1C1C"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_30_dip"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_back"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimen_29_dip"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_loginout"
            android:layout_marginTop="@dimen/dimen_78_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:gravity="center"
            android:textSize="@dimen/dimen_24_dip"
            android:textColor="@color/white"
            android:background="@drawable/slategrey_bg"
            android:layout_alignParentBottom="true"
            android:text="退出登录"/>

    </RelativeLayout>

</LinearLayout>