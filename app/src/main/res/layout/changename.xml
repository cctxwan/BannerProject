<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/dimen_15_dip"
    android:layout_marginLeft="@dimen/dimen_15_dip"
    android:layout_gravity="center"
    android:background="@drawable/feedbook_bg">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_67_dip"
        android:background="@drawable/changename_title_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#484848"
            android:textSize="@dimen/dimen_20_dip"
            android:text="更改昵称"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/lin_changeclose"
            android:layout_width="@dimen/dimen_67_dip"
            android:layout_height="@dimen/dimen_67_dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_5_dip"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/close"
                android:layout_width="@dimen/dimen_13_dip"
                android:layout_height="@dimen/dimen_13_dip"
                android:src="@mipmap/close"/>

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/et_changename"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54_dip"
        android:background="@drawable/changename_bg"
        android:hint="输入昵称"
        android:textColorHint="#9E9E9E"
        android:maxLength="8"
        android:textSize="@dimen/dimen_20_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_40_dip"
        android:textColor="@color/black"
        android:paddingLeft="@dimen/dimen_12_dip"/>

    <TextView
        android:id="@+id/txt_changename"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_59_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginTop="@dimen/dimen_43_dip"
        android:layout_marginBottom="@dimen/dimen_33_dip"
        android:gravity="center"
        android:textSize="@dimen/dimen_24_dip"
        android:textColor="@color/white"
        android:background="@drawable/slategrey_helftrs_bg"
        android:text="保存"/>

</LinearLayout>