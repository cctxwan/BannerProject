<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/feedbook_bg"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/dimen_51_dip"
    android:layout_marginRight="@dimen/dimen_51_dip"
    android:layout_width="@dimen/dimen_384_dip"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/register_succ"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_69_dip"/>
    
    <TextView
        android:id="@+id/dialog_register_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="您已注册成功"
        android:textColor="#24262A"
        android:layout_marginLeft="@dimen/dimen_30_dip"
        android:layout_marginRight="@dimen/dimen_30_dip"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30_dip"
        android:textSize="@dimen/dimen_24_dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎您加入云蛛大家庭"
        android:textColor="#333333"
        android:textSize="@dimen/dimen_13_dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_9_dip"/>

    <TextView
        android:id="@+id/dialog_registersucc_login"
        android:layout_width="@dimen/dimen_256_dip"
        android:layout_height="@dimen/dimen_53_dip"
        android:layout_marginTop="@dimen/dimen_35_dip"
        android:layout_marginBottom="@dimen/dimen_50_dip"
        android:layout_gravity="center_horizontal"
        android:text="立即登录"
        android:gravity="center"
        android:textSize="@dimen/dimen_22_dip"
        android:background="@drawable/slategrey_bg"
        android:textColor="#ffffff"/>

</LinearLayout>