<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_209_dip"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginTop="@dimen/dimen_162_dip"
            android:layout_marginLeft="@dimen/dimen_40_dip"
            android:textSize="@dimen/dimen_31_dip"
            android:layout_weight="1"
            android:textColor="#444444"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yz"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_75_dip"
        android:layout_marginLeft="@dimen/dimen_39_dip"
        android:layout_marginRight="@dimen/dimen_37_dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_rg_username"
            android:layout_width="match_parent"
            android:background="@drawable/while_bg"
            android:padding="@dimen/dimen_10_dip"
            android:gravity="left|center"
            android:hint="请输入手机号"
            android:lines="1"
            android:maxLength="11"
            android:inputType="phone"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/black"
            android:layout_height="@dimen/dimen_80_dip" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:weightSum="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_rg_code"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@drawable/while_bg"
                android:padding="@dimen/dimen_10_dip"
                android:gravity="left|center"
                android:hint="请输入验证码"
                android:lines="1"
                android:maxLength="6"
                android:inputType="number"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/black"
                android:layout_height="@dimen/dimen_80_dip" />

            <TextView
                android:id="@+id/txt_rg_getcode"
                android:layout_width="@dimen/dimen_150_dip"
                android:background="@drawable/while_bg"
                android:gravity="right|center"
                android:hint="获取验证码"
                android:paddingRight="@dimen/dimen_13_dip"
                android:textColorHint="#1D65FF"
                android:textSize="@dimen/dimen_18_dip"
                android:textColor="#1D65FF"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/et_rg_password"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dimen_10_dip"
                android:layout_width="match_parent"
                android:background="@drawable/while_bg"
                android:padding="@dimen/dimen_10_dip"
                android:gravity="left|center"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:lines="1"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_20_dip"
                android:textColor="@color/black"
                android:layout_height="@dimen/dimen_80_dip" />


            <ImageView
                android:id="@+id/img_register_lookpsd"
                android:layout_width="@dimen/dimen_43_dip"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:background="@drawable/while_bg"
                android:paddingRight="@dimen/dimen_13_dip"
                android:src="@mipmap/hide_pass"
                android:layout_gravity="center_vertical"/>


        </LinearLayout>

        <TextView
            android:id="@+id/txt_yhxy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#868686"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:textSize="@dimen/dimen_17_dip"
            android:text="点击注册表示您已阅读并同意《云蛛传媒用户协议》"/>

        <TextView
            android:id="@+id/txt_register"
            android:layout_marginTop="@dimen/dimen_72_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:gravity="center"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/white"
            android:background="@drawable/slategrey_bg"
            android:text="立即注册"/>


        <TextView
            android:id="@+id/txt_tologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_19_dip"
            android:layout_marginTop="@dimen/dimen_31_dip"
            android:layout_gravity="center"
            android:textColor="#303030"
            android:text="已有账号去登录"/>


    </LinearLayout>

</LinearLayout>