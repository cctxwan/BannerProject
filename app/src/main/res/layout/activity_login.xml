<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_209_dip"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:layout_marginTop="@dimen/dimen_162_dip"
            android:layout_marginLeft="@dimen/dimen_40_dip"
            android:textSize="@dimen/dimen_31_dip"
            android:layout_weight="1"
            android:textColor="#444444"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/yz"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账号，立即注册"
        android:textSize="@dimen/dimen_17_dip"
        android:layout_marginLeft="@dimen/dimen_40_dip"
        android:layout_marginTop="@dimen/dimen_17_dip"
        android:textColor="#929292"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_39_dip"
        android:layout_marginRight="@dimen/dimen_37_dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_username"
            android:layout_marginTop="@dimen/dimen_75_dip"
            android:layout_width="match_parent"
            android:background="@drawable/while_bg"
            android:padding="@dimen/dimen_10_dip"
            android:gravity="left|center"
            android:hint="请输入手机号"
            android:lines="1"
            android:maxLength="11"
            android:inputType="number"
            android:textColorHint="@color/grey"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="@color/black"
            android:layout_height="@dimen/dimen_80_dip" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10_dip"
            android:weightSum="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_password"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:background="@drawable/while_bg"
                android:padding="@dimen/dimen_10_dip"
                android:gravity="left|center"
                android:hint="请输入密码"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/dimen_20_dip"
                android:lines="1"
                android:textColor="@color/black"
                android:layout_height="@dimen/dimen_80_dip" />

            <ImageView
                android:id="@+id/img_login_loogpsd"
                android:layout_width="@dimen/dimen_30_dip"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@drawable/while_bg"
                android:src="@mipmap/hide_pass"/>

            <TextView
                android:id="@+id/txt_getcode"
                android:layout_width="@dimen/dimen_150_dip"
                android:visibility="gone"
                android:background="@drawable/while_bg"
                android:gravity="right|center"
                android:hint="获取验证码"
                android:textColorHint="#1D65FF"
                android:paddingRight="@dimen/dimen_13_dip"
                android:textSize="@dimen/dimen_18_dip"
                android:textColor="#1D65FF"
                android:layout_height="match_parent" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_24_dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login_ysxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#868686"
                android:visibility="gone"
                android:textSize="@dimen/dimen_16_dip"/>

            <TextView
                android:id="@+id/txt_login_forgetPsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:textSize="@dimen/dimen_16_dip"/>

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_login"
            android:layout_marginTop="@dimen/dimen_39_dip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:gravity="center"
            android:textSize="@dimen/dimen_24_dip"
            android:textColor="@color/white"
            android:background="@drawable/slategrey_bg"
            android:text="立即登录"/>


        <TextView
            android:id="@+id/txt_getcodelogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#303030"
            android:gravity="center"
            android:layout_marginTop="@dimen/dimen_31_dip"
            android:text="验证码登录"/>


    </LinearLayout>

</LinearLayout>