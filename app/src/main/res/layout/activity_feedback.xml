<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F2F7"
    android:paddingLeft="@dimen/dimen_25_dip"
    android:paddingRight="@dimen/dimen_25_dip"
    tools:context=".activity.FeedbackActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/dimen_27_dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/img_feedbook_back"
            android:layout_width="@dimen/dimen_45_dip"
            android:layout_height="@dimen/dimen_45_dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_9_dip"
                android:layout_height="@dimen/dimen_22_dip"
                android:src="@mipmap/back_black"
                android:layout_marginTop="@dimen/dimen_25_dip"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:layout_marginTop="@dimen/dimen_20_dip"
            android:textColor="#333333"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dimen_23_dip" />

        <TextView
            android:id="@+id/txt_feedbook_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dimen_25_dip"
            android:layout_marginRight="0dp"
            android:text="反馈记录"
            android:textColor="#333333"
            android:textSize="@dimen/dimen_15_dip" />

    </RelativeLayout>
    
    <com.bangni.yzcm.view.ContainsEmojiEditText
        android:id="@+id/et_feedbook_content"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_43_dip"
        android:layout_height="@dimen/dimen_289_dip"
        android:gravity="left|top"
        android:padding="@dimen/dimen_10_dip"
        android:maxLength="100"
        android:hint="请详细描述您遇到的问题以便尽快为您解决..."
        android:textColorHint="#999999"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_19_dip"
        android:background="@drawable/feedbook_bg"/>

    <requestFocus/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_feedbook_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_63_dip"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dimen_29_dip"
            android:textSize="@dimen/dimen_24_dip"
            android:textColor="@color/white"
            android:background="@drawable/slategrey_helftrs_bg"
            android:text="提交反馈"/>

    </RelativeLayout>

</LinearLayout>