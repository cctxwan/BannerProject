<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_256_dip"
        android:background="@drawable/feedbook_bg"
        android:layout_marginBottom="@dimen/dimen_20_dip"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_wheelview_cancal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:layout_marginTop="@dimen/dimen_13_dip"
                android:layout_marginLeft="@dimen/dimen_13_dip"
                android:layout_alignParentLeft="true"
                android:textColor="#4C4C4C"
                android:textSize="@dimen/dimen_20_dip"/>

            <TextView
                android:id="@+id/txt_wheelview_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:layout_marginTop="@dimen/dimen_13_dip"
                android:layout_marginRight="@dimen/dimen_13_dip"
                android:layout_alignParentRight="true"
                android:textColor="#4C4C4C"
                android:textSize="@dimen/dimen_20_dip"/>

        </RelativeLayout>

        <com.contrarywind.view.WheelView
            android:id="@+id/wheelview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_13_dip"
            android:layout_marginTop="@dimen/dimen_13_dip"
            android:layout_marginRight="@dimen/dimen_13_dip"
            android:layout_marginBottom="@dimen/dimen_13_dip"/>

    </LinearLayout>

</RelativeLayout>