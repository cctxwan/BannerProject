<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/dimen_15_dip"
    android:layout_marginLeft="@dimen/dimen_15_dip"
    android:layout_marginBottom="@dimen/dimen_19_dip"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_202_dip"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:background="@drawable/feedbook_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="拍照"
            android:textSize="@dimen/dimen_21_dip"
            android:textColor="#08111E"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/album"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="从相册中选择"
            android:textSize="@dimen/dimen_21_dip"
            android:textColor="#08111E"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5px"
            android:background="#F5F5F5" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/dimen_21_dip"
            android:textColor="#4C4C4C"/>

    </LinearLayout>

</RelativeLayout>