<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#F1F2F7"
    android:paddingLeft="@dimen/dimen_25_dip"
    android:paddingRight="@dimen/dimen_25_dip"
    tools:context=".activity.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/dimen_27_dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/img_orderdetail_back"
                android:layout_width="@dimen/dimen_45_dip"
                android:layout_height="@dimen/dimen_45_dip"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen_9_dip"
                    android:layout_height="@dimen/dimen_22_dip"
                    android:src="@mipmap/back_black"
                    android:layout_marginTop="@dimen/dimen_25_dip"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单详情"
                android:layout_marginTop="@dimen/dimen_20_dip"
                android:textColor="#333333"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/dimen_23_dip" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42_dip"
            android:layout_marginTop="@dimen/dimen_19_dip"
            android:background="@drawable/blue_orderdetail_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_orderdetail_title"
                android:layout_width="@dimen/dimen_151_dip"
                android:layout_height="@dimen/dimen_37_dip"
                android:layout_marginLeft="@dimen/dimen_3_dip"
                android:background="@drawable/while_orderdetail_bg"
                android:text="广告信息"
                android:textColor="#3A82EA"
                android:textSize="@dimen/dimen_20_dip"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_119_dip"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_20_dip"
                android:text="正在进行中..."/>

        </LinearLayout>

        <TextView
            android:id="@+id/txt_orderdetail_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_21_dip"
            android:textSize="@dimen/dimen_20_dip"
            android:textColor="#333333"
            android:text="基本信息"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_19_dip"
            android:background="@drawable/feedbook_bg"
            android:padding="@dimen/dimen_20_dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告名称"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="馨灵瑜伽"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_order_community"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投放社区"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10个"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_30_dip"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始时间"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020年3月20日   15:00"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束时间"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020年6月20日   15:00"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告费用"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥1000"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_broadcasenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="监播统计"
                android:textSize="@dimen/dimen_20_dip"
                android:layout_marginLeft="@dimen/dimen_18_dip"
                android:layout_marginTop="@dimen/dimen_28_dip"
                android:textColor="#333333"/>

            <TextView
                android:id="@+id/orderdetail_txt_allbroadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:gravity="right"
                android:textSize="@dimen/dimen_20_dip"
                android:layout_marginRight="@dimen/dimen_18_dip"
                android:layout_marginTop="@dimen/dimen_28_dip"
                android:textColor="#3A82EA"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_19_dip"
            android:background="@drawable/feedbook_bg"
            android:padding="@dimen/dimen_20_dip"
            android:orientation="vertical">

            <RelativeLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="监播信息"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/right_back"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计流量"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000(人次)"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_60_dip"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累计播放"
                    android:textColor="#464646"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dimen_20_dip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000(次)"
                    android:textSize="@dimen/dimen_20_dip"
                    android:textColor="#1C1C1C"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>